<main class="contenedor">
  <form method="POST" class="default-form">
    <div class="campo">
      <label for="nombre">Nombre</label>
      <input type="text" name="nombre" placeholder="Tu Nombre">
    </div>
    <div class="campo">
      <label for="email">Correo</label>
      <input type="email" name="email" placeholder="Tu Correo">
    </div>
    <div class="campo">
      <label for="password">Contraseña</label>
      <input type="password" name="password" placeholder="Tu Contraseña">
    </div>
    <div class="campo">
      <label for="confirmar">Repetir Contraseña</label>
      <input type="password" name="confirmar" placeholder="Repite tu Contraseña">
    </div>
    <div class="campo acciones">
      <a href="/iniciar-sesion">¿Ya tienes una cuenta? <b>Inicia Sesión</b></a>
		  <a href="#"><i>¿Olvidaste tu Contraseña?</i></a>
    </div>
    <div class="campo">
      <input type="submit" value="Crear Cuenta" class="btn btn-azul">
    </div>
  </form>
</main>