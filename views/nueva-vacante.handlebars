<main class="contenedor">
  <div class="contenedor centrar-horizontal"> 
    <a href="/administracion" class="btn btn-azul">« Cancelar</a>
  </div>
  <form method="POST" class="default-form">
    <h3>Informacion General</h3>
    <div class="campo">
      <label for="titulo">Titulo</label>
      <input type="text" name="titulo" placeholder="Ej: React Developer" required>
    </div>
    <div class="campo">
      <label for="empresa">Empresa</label>
      <input type="text" name="empresa" placeholder="Ej: Facebook" required>
    </div>
    <div class="campo">
      <label for="ubicacion">Ubicacion</label>
      <input type="text" name="ubicacion" placeholder="Ej: Colombia, Remoto, etc" required>
    </div>
    <div class="campo">
      <label for="salario">Salario (USD)</label>
      <input type="text" name="salario" placeholder="Ej: 500$" required>
    </div>
    <div class="campo">
      <label for="contrato">Contrato</label>
      <select name="contrato">
        <option value="" disabled>--Seleciona--</option>
        <option value="Freelance">Freelance</option>
        <option value="Termino Indefinido">Termino Indefinido</option>
        <option value="Termino Definido">Termino Definido</option>
        <option value="Prestacion de Servicios">Prestacion de Servicios</option>
      </select>
    </div>
    <h3>Descripcion del Puesto</h3>
    <div class="campo descripcion">
      <label for="descripcion">Descripción</label>
      <input type="hidden" id="x" name="descripcion">
      <trix-editor input="x"></trix-editor>
    </div>
    <h3>Conocimientos</h3>
    <ul class="lista-conocimientos">
      {{#seleccionarSkills}}
      {{/seleccionarSkills}}
    </ul>
    <div class="campo centrar-horizontal">
      <input type="hidden" name="skills" id="skills">
      <input type="submit" value="Publicar" class="btn btn-azul">
    </div>
  </form>
</main>
<script type="text/javascript" src="https://unpkg.com/trix@2.0.0/dist/trix.umd.min.js"></script>
<script src="/dist/skills.js"></script>